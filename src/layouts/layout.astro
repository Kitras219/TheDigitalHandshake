---
// Importujemy globalne style
import "../styles/global.css";

// Definiujemy właściwości, które może przyjąć nasz layout.
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Portfolio inżyniera procesu i specjalisty IT, prezentujące projekty z zakresu optymalizacji i automatyzacji.",
} = Astro.props;

// Tworzymy obiekt z danymi SEO dla łatwiejszego zarządzania
const seo = {
  title: `${title} | The Digital Handshake`,
  description: description,
  image: `${Astro.url.origin}/social-preview.jpg`,
  url: Astro.url.href,
};
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Podstawowe Tagi SEO -->
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <link rel="canonical" href={seo.url} />

    <!-- Tagi Open Graph (dla podglądów w social media, np. LinkedIn, Facebook) -->
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:url" content={seo.url} />
    <meta property="og:image" content={seo.image} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pl_PL" />

    <!-- Możesz tu dodać linki do czcionek, np. z Google Fonts -->
  </head>
  <body
    class="bg-zinc-950 text-white font-sans selection:bg-amber-400 selection:text-zinc-900"
  >
    <slot />
  </body>
</html>

<!-- NOWA SEKCJA: Animacja tła -->
<style is:global>
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    z-index: -1;
    /* Tworzymy dwie subtelne, złote poświaty za pomocą gradientów radialnych */
    background: radial-gradient(
        circle at 20% 20%,
        rgba(251, 191, 36, 0.07) 0%,
        transparent 25%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(251, 191, 36, 0.05) 0%,
        transparent 20%
      );
    /* Uruchamiamy animację przesuwania tła */
    animation: background-pan 30s linear infinite;
    will-change: transform; /* Optymalizacja wydajności animacji */
  }

  /* Definicja klatek kluczowych dla naszej animacji */
  @keyframes background-pan {
    0% {
      transform: translate(0%, 0%);
    }
    25% {
      transform: translate(10%, -10%);
    }
    50% {
      transform: translate(0%, -20%);
    }
    75% {
      transform: translate(-10%, 10%);
    }
    100% {
      transform: translate(0%, 0%);
    }
  }
</style>
