---
// Komponent reużywalnej "karty" dla pojedynczego projektu

// Definiujemy, jakie właściwości (props) komponent przyjmuje.
// Dodajemy opcjonalną właściwość 'imageFit', która domyślnie jest 'cover'.
interface Props {
  title: string;
  description: string;
  img: string;
  link: string;
  imageFit?: "cover" | "contain";
}

const { title, description, img, link, imageFit = "cover" } = Astro.props;
---

<a
  href={link}
  class="group block bg-zinc-900 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl hover:shadow-amber-400/10 transition-all duration-300 transform hover:-translate-y-1"
>
  <!-- Kontener na obrazek -->
  <div class="aspect-video overflow-hidden">
    <img
      src={img}
      alt={`Zdjęcie projektu ${title}`}
      class:list={[
        "w-full h-full transition-transform duration-300 group-hover:scale-105",
        // Warunkowo dodajemy klasę w zależności od wartości 'imageFit'
        imageFit === "contain" ? "object-contain" : "object-cover",
      ]}
    />
  </div>
  <!-- Kontener na tekst -->
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-white/70 mb-4 h-16">{description}</p>
    <span class="font-semibold text-amber-400 group-hover:underline">
      Zobacz więcej &rarr;
    </span>
  </div>
</a>
