---
// Importujemy dane projektów z naszego nowego, centralnego pliku
import { projects } from "../data/projects";
import ProjectCard from "./projectcard.astro";
---

<section id="projekty" class="py-24 sm:py-32 bg-white/5">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold">Moje Projekty</h2>
      <p class="text-lg text-white/70 mt-4 max-w-2xl mx-auto">
        Przykłady, jak łączę wiedzę procesową z rozwiązaniami technologicznymi,
        aby osiągać wymierne rezultaty.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            title={project.title}
            description={project.description}
            img={project.img}
            link={`/projekty/${project.slug}`}
            imageFit={project.imageFit}
          />
        ))
      }
    </div>
  </div>
</section>
