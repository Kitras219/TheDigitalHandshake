---
import Layout from "../layouts/layout.astro";
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
// W przyszłości możemy tu stworzyć i zaimportować komponent karty wpisu
---

<Layout title="Hobby">
  <Navbar />
  <main class="container mx-auto px-4 pt-12 pb-24 sm:pt-16 sm:pb-32">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl font-bold mb-4">
        Hobby i Zainteresowania
      </h1>
      <p class="text-xl text-white/70 max-w-2xl mx-auto">
        Miejsce na moje przemyślenia, projekty poboczne i wszystko to, co mnie
        inspiruje poza pracą zawodową.
      </p>
    </div>

    <!-- Placeholder na przyszłe wpisy -->
    <div
      class="mt-16 text-center border border-dashed border-white/20 rounded-lg py-24"
    >
      <p class="text-white/50">Wkrótce pojawią się tu pierwsze wpisy...</p>
    </div>
  </main>
  <Footer />
</Layout>
